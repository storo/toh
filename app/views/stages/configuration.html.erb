<link href="http://fonts.googleapis.com/css?family=Amatic+SC:400,700" media="all" rel="stylesheet" type="text/css">
<script src="/javascripts/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('.button').click(function(){
            parent.$(parent.document).trigger("ChangeBackground", [$('.design:checked').val(), '<%= @id %>']);
            return false;
        });

    });

</script>

<style>
    .box-fr{
        font-family: 'Amatic SC', cursive;
        font-weight: 800;
    }
    .box-title{
        margin: 0 auto;
        width: 235px;
    }
    .box-title img{
        float: left;
        padding-right: 12px;
    }
    .box-title h2{
        font-size: 33px;
        line-height: 14px;
        margin-left: 12px;
    }
    p{
        font-size: 21px;
        margin: 0px auto;
        width: 440px;
        margin-top: -10px;
        padding: 0px;
    }

    p.text-tip{
        color: #D94601;
    }

    a.buy_more{
        color: #D94601;
    }
    .text{
        background: url('../images/sprite-forms.png') -17px -221px no-repeat;
        width: 339px;
        border: none;
        height: 62px;
        padding: 0px 5px 0px 15px;
        font-size: 21px;
        margin-bottom: 13px;
        margin-left: 9px;
        -webkit-appearance: none;
        font-family: 'Amatic SC', cursive;
        font-weight: 400;
    }
    .box-form{
        float:left;
        margin-top: 50px;
        width: 450px;
    }
    .button{
        background: url(../images/img_sprite.png) no-repeat -660px -338px;
        width: 100px;
        height: 49px;
        float: right;
        border: none;
        color: white;
        font-family: 'Amatic SC', cursive;
        font-weight: 400;
        font-size: 22px;
        margin-top: 5px;
    }
    .clear{
        clear: both;
        height: 2px;
    }
       .checkbox{
           float: left;
           margin-top: 10px;
           margin-right: 10px;
       }

</style>
<div class="box-fr">
  <div class="box-title">
    <h2>STAGE CONFIGURATION</h2>
  </div>
  <p>Change stage background.</p>
  <div class="box-form">
    <section class="td2 left" style="width:300px;margin-top: -42px;margin-left: 94px;">
      <label><span class="checkbox"><input name="stage[design]"  class="design" type="radio" value="4" <% if @stage.design.to_i == 4 %>checked="checked"<% end %>></span><%= image_tag('ec-4.png', :width => 160,:style => 'float: left;margin-bottom: 10px;') %> <button class="button">Change!</button></label>
      <section class="clear"></section>
      <label><span class="checkbox"><input name="stage[design]"  class="design" type="radio" value="1" <% if @stage.design.to_i == 1 %>checked="checked"<% end %>></span><%= image_tag('ec-1.png', :width => 160,:style => 'float: left;margin-bottom: 10px;') %> <button class="button">Change!</button></label>
      <section class="clear"></section>
      <label><span class="checkbox"><input name="stage[design]" class="design" type="radio" value="2" <% if @stage.design.to_i == 2 %>checked="checked"<% end %>></span><span class="brown"><%= image_tag('ec-2.png', :width => 160,:style => 'float: left;') %></span> <button class="button">Change!</button></label>
      <section class="clear" style="height: 20px;"></section>
      <% pool = 0 %>
      <% if !@stage_item.nil? %>
          <% @stage_item.each do |si| %>
              <% if si.item.to_i == 3 %>
                  <% pool = 1 %>
              <% end %>
          <% end %>
      <% end %>
      <% if pool == 0 %>
          <label><span class="checkbox"><input name="stage[design]" class="design" type="radio" value="3"></span><span class="brown"><%= image_tag('ec-3.png', :width => 160,:style => 'float: left;') %></span></label>
          <section class="clear" style="height: 20px;"></section>
      <% end %>
      <label><span class="checkbox"><input name="stage[design]" class="design" type="radio" value="0" <% if @stage.design.to_i == 0 %>checked="checked"<% end %>></span><span><strong>no design</strong></span>  <button class="button">Change!</button></label>

    </section>



  </div>


</div>